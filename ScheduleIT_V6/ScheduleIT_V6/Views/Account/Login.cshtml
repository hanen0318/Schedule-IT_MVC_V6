
@model ScheduleIT_V6.Models.User

@{
    ViewBag.Title = "Login";
}

<h2>Login to Your Schedule</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.UserID)
        @Html.TextBoxFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password)
        @Html.PasswordFor(model => model.Password, new { htmlAttribute = new { @class = "form-control" } })

    </div>

    <button type="submit" class="btn btn-primary">Login</button>
    <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Create", "Account")';">Register Now</button>
}

<div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>
